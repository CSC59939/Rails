{
  "name": "rails",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "antd": "3.10.0",
    "classnames": "2.2.6",
    "firebase": "5.5.4",
    "material-design-icons": "3.0.1",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-big-calendar": "0.20.1",
    "react-dom": "16.5.2",
    "react-router-dom": "4.3.1",
    "react-scripts": "2.0.4"
  },
  "scripts": {
    "install": "npm install -g eslint stylelint cross-env",
    "start": "react-scripts start",
    "build": "react-scripts build && workbox generateSW ../website/workbox-config.js",
    "test": "react-scripts test --env=jsdom --verbose",
    "regen": "react-scripts test -u",
    "lint": "eslint src/ | stylelint src/ *.css",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "cross-env CI=true npm test "
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "cross-env": "5.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "react-test-renderer": "16.5.2",
    "stylelint": "9.6.0",
    "stylelint-config-standard": "18.2.0"
  },
  "eslintConfig": {
    "globals": {
      "window": true
    }
  }
}
